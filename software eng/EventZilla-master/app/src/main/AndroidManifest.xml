<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.snow.eventzilla">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"

        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar"
        android:icon="@mipmap/ic_launcher"
        android:name=".App_Application"
       >
        <activity
            android:name=".EventItemListActivity"
            android:label="@string/app_name" >

        </activity>

        <activity android:name=".login_Activity" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".mainView_Activity"></activity>
        <activity android:name=".Account_Create_Activity"></activity>
        <activity android:name=".Calendar_Activity"></activity>
        <activity android:name=".ActiveEvent_Activity"></activity>
        <activity android:name=".UserMessages_Activity"></activity>
        <activity android:name=".CreateEvent_Activity"></activity>
        <activity android:name=".SendMessages_Activity"></activity>
        <activity android:name=".EventItemDetailActivity"
            android:theme="@style/Theme.AppCompat.Light"></activity>

    </application>

</manifest>

